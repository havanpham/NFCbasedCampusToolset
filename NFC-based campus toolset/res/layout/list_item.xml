<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/room_schedule_background"
    android:orientation="vertical" >

    <LinearLayout
		style="?whiteBackground"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Room schedule"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/board_color"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Room"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/board_color"
            android:textSize="24dp" />

    </LinearLayout>
       <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* * * * * * * * * * * * * * * * * *"
                android:gravity="center"
				android:singleLine="true"
                android:drawableBottom="#ffffff"
                android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:divider="#ffffff"
        android:dividerHeight="2dp"
        android:headerDividersEnabled="true" >

    </ListView>

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="0.05" >

        <Button
            android:id="@+id/btn5"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/number_6_icon"
            android:state_focused="true"
            android:state_pressed="true" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn5"
            android:background="@drawable/number_5_icon" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignBaseline="@+id/btn4"
            android:layout_alignBottom="@+id/btn4"
            android:layout_toLeftOf="@+id/btn4"
            android:background="@drawable/number_4_icon" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn3"
            android:background="@drawable/number_3_icon" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn2"
            android:background="@drawable/number_2_icon" />

    </RelativeLayout>

</LinearLayout>